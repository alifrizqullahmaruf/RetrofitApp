<?xml version="1.0" encoding="utf-8"?>
<!-- Manifest file yang mendefinisikan informasi dasar aplikasi Android -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin yang diperlukan oleh aplikasi -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Konfigurasi aplikasi -->
    <application
        android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.RetrofitApp"
    tools:targetApi="31">  <!-- Versi target API yang ditentukan oleh alat pengembangan -->

    <!-- Aktivitas utama dalam aplikasi -->
    <activity
        android:name=".MainActivity"
    android:exported="true">
    <intent-filter>
        <action android:name="android.intent.action.MAIN" />  <!-- Tindakan utama aplikasi -->
        <category android:name="android.intent.category.LAUNCHER" />  <!-- Kategori peluncur aplikasi -->
    </intent-filter>
</activity>
    </application>
    </manifest>
